page{
  width: 100%;
  height: 100%;
}
.index_main{
  width: 100%;
  height: 100%;
  background: #c53f36;
  display: flex;
  flex-direction: column;
  position: relative;
}
.bc{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  background: transparent;
  z-index: 10;
}
.index_close{
  width: 61rpx;
  height: 59rpx;
  position: absolute;
  top: 0;
  right: 0
}
.index_close image{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  right: 0
}
.im_bc{
  width: 675rpx;
  height: 732rpx;
  margin-top: 43rpx;
  margin-left: 3rpx;
}
.im_bc image{
  width: 100%;
  height: 100%;
}
.points{
  margin-top: 63rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.pi_content{
  width: 100%;
  display: flex;
  flex-direction: column;
}
.pc_con{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-top: 38rpx;
}
.pc_con:first-child{
  margin-top: 0;
}
.point{
  width: 18rpx;
  height: 18rpx;
  border-radius: 50%;
  background: #fff;
  opacity: 0;
  animation: point linear 1s infinite;
}
.point_1{
  animation-delay:0s;
}
.point_2{
  animation-delay:0.3s;
}
.point_3{
  animation-delay:0.6s;
} 
@keyframes point
{
  from {opacity: 0}
  to {opacity: 1}
}
.hotel{
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-top: 30rpx;
}
.hotel_left{
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-right: 8rpx;
}
.hotel_right{
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 8rpx;
}
.hl_hr{
  width: 35rpx;
  height: 2rpx;
  background: #fff;
}
.hotel_text{
  height: 35rpx;
  line-height: 35rpx;
  display: flex;
  flex-direction: column;
  font-size: 24rpx;
  color: #fff;
}
.text{
  opacity: 0;
  animation: text linear 1s forwards ;
  -webkit-animation: text linear 1s forwards; /*Safari and Chrome*/
}
@keyframes text
{
  0% {opacity: 0;transform: translateY(30rpx);}
  100% {opacity: 1;transform: translateY(0);}
}
.loadingText{
  width: 100%;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  position: absolute;
  bottom: 40rpx;
}