/*酒店列表*/
.content{
  display: flex;
  flex-direction: column;
  height: 100%;
  background: #ececec;
  padding: 20rpx 20rpx;
  box-sizing: border-box;
  overflow: hidden;
}
.content_null{
  height: 887rpx;
}
.hotel_null{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.hn_icon{
  width: 76rpx;
  height: 96rpx;
  display: flex;
  flex-direction: column;
  margin: 0 auto 20rpx auto;
}
.hn_icon image{
  width: 100%;
  height: 100%;
}
.hn_text{
  color: #909090;
  font-size: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  margin: 0 auto;
  text-align: center;
  position: relative;
}
.hn_text::before{
  content: '';
  display: block;
  position: absolute;
  width: 50rpx;
  height: 2rpx;
  background: #909090;
  left: -59rpx;
  bottom: 15rpx;
}
.hn_text::after{
  content: '';
  display: block;
  position: absolute;
  width: 50rpx;
  height: 2rpx;
  background: #909090;
  right: -59rpx;
  bottom: 15rpx;
}
.hotel_con{
  width: 100%;
  /* height: 560rpx; */
  height: auto;
  margin-bottom: 10rpx;
  background: #fff;
  border-radius: 15rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  position: relative;
}
.click_bc{
  position: absolute;
  right: 0;
  top: 0;
  width: 100rpx;
  height: 100rpx;
  opacity: 0;
  z-index: 10;
}
.click_bc2{
  position: absolute;
  left: 0;
  top: 0;
  width: 650rpx;
  height: 100%;
  opacity: 0;
  z-index: 10; 
}
.hotel_con:last-child{
  margin-bottom: 0;
}

/*纵向显示*/
.hotel_img{
  width: 100%;
  height: 380rpx;
  display: flex;
  flex-direction: column;
}
.hotel_img image{
  width: 100%;
  height: 100%;
}
.hotel_content{
  padding: 27rpx 26rpx 29rpx 23rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  box-sizing: border-box;
}
.hc_left{
  width: 70%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.hcl_1{
  display: flex;
  flex-direction: row;
}
.hotel_name{
  font-size: 30rpx;
  color: #2272a5;
  margin-right: 22rpx;
}
.hotel_distance{
  font-size: 24rpx;
  color: #ff840b;
  line-height: 48rpx;
  text-align: right;
}
.hcl_2{
  display: flex;
  flex-direction: row;
}
.hc_right{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  position: relative;
}
.hotel_icon{
  width: 17rpx;
  height: 17rpx;
  margin: auto 0;
  margin-right: 10rpx;
  display: flex;
  flex-direction: column;
}
.hotel_icon image{
  width: 100%;
  height: 100%;
}
.hotel_tel{
  color: #555555;
  font-size: 24rpx;
}
.hcl_3{
  display: flex;
  flex-direction: row;
}
.hotel_icon_addr{
  width: 16rpx;
  height: 22rpx;
  margin: auto 0;
  margin-right: 10rpx;
  display: flex;
  flex-direction: column;
}
.hotel_icon_addr image{
  width: 100%;
  height: 100%;
}
.hotel_addr{
  color: #676767;
  font-size: 24rpx;
  width: 100%;
  overflow:hidden;
  text-overflow: ellipsis;
  white-space: nowrap; 
}
.hcr_con{
  display: flex;
  flex-direction: row;
  height: 32rpx;
  position: absolute;
