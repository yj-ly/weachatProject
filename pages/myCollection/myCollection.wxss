  width: 100%;
  height: 100%;
  position: fixed;
  background: #000000;
  opacity: .56;
  z-index: 20;
}
.delete_div{
  width: 580rpx;
  height: 332rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin: auto;
