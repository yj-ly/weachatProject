  font-size: 25.27rpx;
  line-height: 32rpx;
}
.hotel_evaluate{
  font-size: 28rpx;
  color: #18cfc9;
  line-height: 46rpx;
}
.hcl1_left{
  display: flex;
  flex-direction: row;
}
.hcl_label{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
}
.labels{
  height: 24rpx;
  line-height: 24rpx; 
  padding: 0 12rpx;
  font-size: 18rpx;
  color: #ff840b;
