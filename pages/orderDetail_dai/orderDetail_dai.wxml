      </view>
    </view>
    <view class='con con_list'>
      <view class='con_l'>
        <view class='roomName'>{{hotel.room.roomName}}<text class='rn_num'>({{hotel.room.num}}间)</text></view>
        <view class='con_date'>
          <view class='cd_start'>入住：{{hotel.room.starTime}}({{hotel.room.star_week}})</view>
          <view class='cd_end'>离店：{{hotel.room.endTime}}({{hotel.room.end_week}})</view>
        </view>
      </view>
    </view>
  </view>

  <view class='hotel people'>
    <view class='peoTitle'>预订人信息</view>
    <view class='peo_con'>
      <view class='pc_l'><view>预</view><view>订</view><view>人</view></view>
      <view class='pc_r'>：{{people.name}}</view>
    </view>
    <view class='peo_con'>
      <view class='pc_l'><view>联</view><view>系</view><view>电</view><view>话</view></view>
      <view class='pc_r'>：{{people.tel}}</view>
    </view>
    <view class='peo_con'>
       <view class='pc_l'><view>预</view><view>计</view><view>到</view><view>店</view></view>
      <view class="pc_r">：{{people.arrvieTime}}</view>
    </view>
  </view>

  <view class='hotel orderInfo'>
    <view class='oiTitle'>订单信息</view>
    <view class='oi_con'>
      <view class='oic_l'><view>订</view><view>单</view><view>号</view></view>
      <view class="oic_r">：{{orderInfo.orderNo}}</view>
    </view>
    <view class='oi_con'>
      <view class='oic_l'><view>下</view><view>单</view><view>时</view><view>间</view></view>
      <view class="oic_r">：{{orderInfo.orderDate}}</view>
    </view>
  </view>

  <view class='hotel refund' wx:if='{{refundData != null && refundData != ""}}'>
    <view class='rfTitle'>支付信息</view>
    <!-- 支付状态： 0成功，1失败，2支付中，3已取消，9待支付 -->
    <view class='refund_content' wx:for-item="item" wx:for="{{refundData}}" wx:key="unique">
      <!-- 支付 -->
      <view wx:if='{{item.parent_id == 0}}'>
        <view class='rf_con'>
          <view class='rfc_l'>支付金额：</view>
          <view class="rfc_r">￥{{item.total_amount}}元</view>
        </view>
        <view class='rf_con'>
            <view class='rfc_l'>支付时间：</view>
            <view class="rfc_r" wx:if='{{item.status == 0 && item.pay_time != null}}'>{{item.pay_time}}</view>
            <view class="rfc_r rfc_status" wx:if='{{item.status == 1}}'>支付失败</view>
            <view class="rfc_r rfc_status" wx:if='{{item.status == 3}}'>支付已取消</view>
            <view class="rfc_r rfc_status" wx:if='{{item.status == 9}}'>待支付</view>
          </view>
        </view>
      <!-- 退款 -->
      <view wx:else>
        <view class='rf_con'>
          <view class='rfc_l'>退款金额：</view>
          <view class="rfc_r">￥{{item.total_amount}}元</view>
        </view>
        <view class='rf_con'>
          <view class='rfc_l'>退款时间：</view>
          <view class="rfc_r" wx:if='{{item.status == 0 && item.pay_time != null}}'>{{item.pay_time}}</view>
          <view class="rfc_r rfc_status" wx:if='{{item.status == 1}}'>退款失败</view>
          <view class="rfc_r rfc_status" wx:if='{{item.status == 3}}'>退款已取消</view>
          <view class="rfc_r rfc_status" wx:if='{{item.status == 9}}'>退款中</view>
        </view>
      </view>
      <view class='rf_con'>
        <view class='rfc_l'>支付方式：</view>
        <view class="rfc_r rfc_pt" wx:if='{{item.pay_type == 0}}'>
          <view class='rfcr_img'><image src='../../images/weChat.png'></image></view>
          <view class='rfcr_text'>微信支付</view>
        </view>
        <view class="rfc_r rfc_pt" wx:if='{{item.pay_type == 1}}'>
          <view class='rfcr_img'><image src='../../images/dou.png'></image></view>
          <view class='rfcr_text'>易用豆支付</view>
        </view>
      </view>
    </view>
  </view>

  <view class='footer'>
    <view class='fl' bindtap='openMap'>
      <view class='ft_icon ft_icon1'><image src='../../images/orderDetail_addr.png'></image></view>
      <view class='ft_text'>查看路线</view>
    </view>
    <view class='fc' bindtap='toCall'>
      <view class='ft_icon ft_icon2'><image src='../../images/orderDetail_tel.png'></image></view>
      <view class='ft_text'>联系电话</view>
    </view>
    <form class='fr' report-submit='true' bindsubmit="noPay">
      <button formType="submit"></button>
      <view class='ft_icon ft_icon3'><image src='../../images/orderDetail_order.png'></image></view>
      <view class='ft_text'>取消订单</view>
    </form>
  </view>
</view>