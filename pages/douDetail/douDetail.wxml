<view class='main'>
  <view class='content' wx:for='{{douList}}' wx:key="und" wx:for-index="index" wx:for-item='item'>
    <view class='con_left'>
      <view class='con_title'>{{item.name}}</view>
      <view class='con_date'>{{item.date}} {{item.week}}</view>
      <view class='con_orderNo'>订单号：{{item.orderNo}}</view>
      <view class='con_addr'>地址：{{item.addr}}</view>
    </view>
    <view class='con_right'>
      <view class='cr_direction' wx:if='{{item.direction == 0}}'><image src='../../images/add.png'></image></view>
      <view class='cr_direction' wx:if='{{item.direction == 1}}'><image src='../../images/jian.png'></image></view>
      <view class='cr_dou'><image src='../../images/dou.png'></image></view>
      <view class='cr_num'>{{item.price}}</view>
    </view>
  </view>
</view>