page{
  background: #ececec;
}
.content{
  width: 100%;
  height: 6.5625rem;
  background: #fff;
  padding: .75rem;
  box-sizing: border-box;
  margin-bottom: .5rem;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.con_left{
  display: flex;
  flex-direction: column;
}
.con_title{
  color: #343434;
  font-size: 0.9375rem;
  margin-bottom: .5rem;
}
.con_date{
  color: #858585;
  font-size: 0.75rem;
  margin-bottom: .5rem;
}
.con_orderNo,.con_addr{
  color: #5f5f5f;
  font-size: 0.625rem;
}
.con_orderNo{
  margin-bottom: .5rem;
}
.con_right{
  display: flex;
  flex-direction: row;
}
.cr_direction{
  width: 0.8125rem;
  height: 0.8125rem;
  display: flex;
  flex-direction: column;
  margin: auto .5rem auto 0;
}
.cr_direction image{
  width: 100%;
  height: 100%;
}
.cr_dou{
  width: 1.4375rem;
  height: 1.1875rem;
  display: flex;
  flex-direction: column;
  margin: auto .2rem auto 0;
}
.cr_dou image{
  width: 100%;
  height: 100%;
}
.cr_num{
  color: #414141;
  font-size: 0.8125rem;
  margin: auto 0;
}