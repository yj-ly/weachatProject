page{
  width: 100%;
  height: 100%;
  background: #fff;
}
.main{
  width: 100%;
  height: 100%;
  position: relative;
}
.bc{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: transparent;
}
.title{
  width: 100%;
  height: 60rpx;
  background: #ececec;
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
}
.title_con{
  width: 14.28%;
  text-align: center;
  line-height: 60rpx;
  font-size: 32rpx;
  color: #494949;
}
.title_free{
  color: #2272a5;
}
.content{
  display: flex;
  flex-direction: column;
}
.con_mon{
  display: flex;
  flex-direction: column;
  margin-bottom: 24rpx;
  border-bottom: 1rpx solid #ececec;
}
.con_mon:last-child{
  border-bottom: none;
}
.mon{
  width: 100%;
  height: 68rpx;
  line-height: 68rpx;
  text-align: center;
  font-size: 28.9rpx;
  border-top: 1rpx solid #ececec;
}
.cons{
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.con_days{
  width: 14.28%;
  height: 101rpx;
  text-align: center;
  font-size: 28rpx;
  border-top: 1rpx solid #ececec;
  background: #fff;
  display: flex;
  flex-direction: column;
  padding-top: 17rpx;
  box-sizing: border-box;
}
.cons_top{
  font-size: 30rpx;
  color: #2b2b2b;
}
.cons_bottom{
  font-size: 20rpx;
  color: #fff;
}
.con_days_choose{
  background: #41a8ea;
}
.con_days_choose .cons_top{
  color: #fff;
}