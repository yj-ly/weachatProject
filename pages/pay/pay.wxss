}
.e_content{
  padding: 0 24rpx;
  box-sizing: border-box;
  width: 100%;
  background: #fff;
  display: flex;
  flex-direction: column;
}
.e_con{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 1rpx solid #f6f6f6;
  line-height: 83rpx;
}
.e_con:last-child{
  border-bottom: none;
}
.ec_left{
  color: #646464;
  font-size: 24rpx;
  width: 100%;
  height: 83rpx;
}
.ec_right{
  display: flex;
  flex-direction: row;
}
.ecr_con{
  width: 114rpx;
  height: 83rpx;
  color: #646464;
  font-size: 24rpx;
  text-align: center;
}
.ecr_icon{
  color: #646464;
  font-size: 24rpx;
}
.ecr_r{
  color: #f11c1c;
}
.preferential {
  height: 74rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #cccccc;
}
.check {
    padding: 0 24rpx 0 0;
}
.preferential_money_con {
  display: flex;
  font-size: 30rpx;
  color: #333333;
 
}
.preferential_money {
  font-size: 30rpx;
    color: #f11c1c;
   padding: 0 10rpx 0 0;
}
.after_money {
     text-decoration:line-through;
     font-size: 26rpx;
     color: #797979;
}

checkbox .wx-checkbox-input{
   border-radius: 50%;/* 圆角 */
   width: 30rpx; /* 背景的宽 */
   height: 30rpx; /* 背景的高 */
   border: none;
   border: 1px solid #066399;
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked{
   border: 1px solid#066399;
   background: #ffffff;
}

/* 选中后的 对勾样式 （白色对勾 可根据UI需求自己修改） */
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before{
   border-radius: 50%;/* 圆角 */
   width: 40rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
   height: 40rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
   line-height: 40rpx;
   text-align: center;
   font-size:30rpx; /* 对勾大小 30rpx */
   color:red; /* 对勾颜色 白色 */
   background: transparent;
   transform:translate(-50%, -50%) scale(1);
   -webkit-transform:translate(-50%, -50%) scale(1);
}